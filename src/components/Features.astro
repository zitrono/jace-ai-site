---
// Features section component
---

<section id="features" class="py-20" style="background-color: rgb(40, 40, 40);">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-base/7 font-semibold" style="color: rgb(255, 220, 97);">Save hours daily</h2>
      <p class="mt-2 max-w-xl text-pretty text-4xl font-semibold tracking-tight text-white sm:text-5xl">
        Your AI-powered inbox assistant
      </p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 gap-8 lg:grid-cols-3">
      <!-- Auto-drafts -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Auto-drafts</h3>
        <p class="text-text-muted">Intelligent email drafts that match your writing style and tone</p>
      </div>
      
      <!-- Schedule events at the speed -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Schedule events at the speed of thought</h3>
        <p class="text-text-muted">Seamlessly schedule meetings and manage your calendar</p>
      </div>
      
      <!-- Auto-label and organize -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Auto-label and organize every email effortlessly</h3>
        <p class="text-text-muted">Automatically organize emails with smart labeling</p>
      </div>
      
      <!-- Ask questions about your emails -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Ask questions about your emails and attachments</h3>
        <p class="text-text-muted">Natural conversations to manage your inbox efficiently</p>
      </div>
      
      <!-- Rules automation -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Automate your inbox with intelligent rules</h3>
        <p class="text-text-muted">Create smart rules to automate repetitive email tasks</p>
      </div>
      
      <!-- Supercharge your workflow -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Supercharge your workflow with seamless integrations</h3>
        <p class="text-text-muted">Connect with your favorite tools and platforms</p>
      </div>
      
      <!-- Stay on top of your day -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Stay on top of your day with daily briefings</h3>
        <p class="text-text-muted">Get smart summaries and insights about your day ahead</p>
      </div>
      
      <!-- Smart search -->
      <div class="card-hover">
        <div class="text-primary-yellow mb-4">
          <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <h3 class="heading-3 gradient-text-primary mb-2">Smart search</h3>
        <p class="text-text-muted">Find any email instantly with AI-powered search</p>
      </div>
    </div>
  </div>
</section>