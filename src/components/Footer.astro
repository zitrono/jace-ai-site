---
// Footer component

interface Props {
  class?: string;
  companyName?: string;
  year?: number;
  contactEmail?: string;
  showLinks?: boolean;
  customLinks?: Array<{
    href: string;
    text: string;
  }>;
}

const { 
  class: className = '',
  companyName = "Beneficious",
  year = new Date().getFullYear(),
  contactEmail = "Konstantin@beneficious.com",
  showLinks = true,
  customLinks
} = Astro.props;

const defaultLinks = [
  { href: "/ralph-web/privacy", text: "Privacy Policy" },
  { href: "/ralph-web/terms", text: "Terms of Service" },
  { href: `mailto:${contactEmail}`, text: "Contact" }
];

const links = customLinks || defaultLinks;
---

<footer class={`bg-primary border-t border-gray-800 ${className}`}>
  <div class="mx-auto max-w-7xl px-6 py-8 lg:px-8">
    <div class="flex flex-col items-center space-y-4">
      {showLinks && (
        <div class="flex flex-wrap justify-center gap-x-6 text-sm">
          {links.map((link) => (
            <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
              {link.text}
            </a>
          ))}
        </div>
      )}
      
      <p class="text-center text-sm text-gray-400">
        Â© {year} {companyName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>