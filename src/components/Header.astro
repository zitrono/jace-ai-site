---
// Header component with navigation
import Button from './Button.astro';

interface Props {
  class?: string;
  sticky?: boolean;
  transparent?: boolean;
}

const { 
  class: className = '',
  sticky = true,
  transparent = false
} = Astro.props;

const headerClasses = [
  sticky ? 'sticky top-0' : 'relative',
  'z-20 inset-x-0 transition-all',
  className
].filter(Boolean).join(' ');
---

<header class={headerClasses}>
  <nav class="mx-auto flex max-w-7xl items-center justify-between">
    <div class="flex items-center justify-between w-full px-6 py-3 lg:px-8 lg:py-4 transition-all header-transparent">
      <div class="flex lg:flex-1">
        <a href="/ralph-web/" class="-m-1.5 p-1.5">
          <span class="sr-only">Ralph</span>
          <span class="text-white font-bold text-2xl">ralph</span>
        </a>
      </div>
      
      <!-- Mobile CTA Button -->
      <div class="flex lg:hidden flex-1 justify-end mr-3">
        <Button variant="primary" size="sm" class="rounded-md mobile-cta-responsive">
          <span class="hidden min-[360px]:inline">Book a Demo</span>
          <span class="inline min-[360px]:hidden">Book Demo</span>
        </Button>
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="flex lg:hidden">
        <button 
          id="mobile-menu-button" 
          type="button" 
          class="inline-flex items-center justify-center rounded-md p-2 text-white" 
          aria-label="Open main menu" 
          aria-expanded="false"
          aria-controls="mobile-menu"
          aria-haspopup="true"
        >
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex lg:gap-x-12" role="navigation" aria-label="Main navigation">
        <a href="/ralph-web/product" class="nav-link">Product</a>
        <a href="/ralph-web/pricing" class="nav-link">Pricing</a>
        <a href="/ralph-web/learn" class="nav-link">Learn</a>
      </nav>
      
      <!-- Desktop CTA Buttons -->
      <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-6">
        <Button variant="secondary" id="login-button" data-test="secondary-button">
          Log In
        </Button>
        <Button variant="primary" size="lg" data-test="cta-button">
          Book a Demo
        </Button>
      </div>
    </div>
  </nav>
  
  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="hidden fixed inset-0 z-50 lg:hidden" role="dialog" aria-modal="true" aria-labelledby="mobile-menu-title">
    <div class="mobile-menu-bg fixed right-0 top-0 bottom-0 w-full p-6">
      <div class="flex items-center justify-between mb-8">
        <a href="/ralph-web/" class="-m-1.5 p-1.5">
          <span class="sr-only">Ralph</span>
          <span class="text-white font-bold text-2xl">ralph</span>
        </a>
        <button id="mobile-menu-close" type="button" class="rounded-md p-2.5 text-white" aria-label="Close menu">
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <nav class="flex flex-col space-y-4" role="navigation" aria-label="Mobile navigation">
        <h2 id="mobile-menu-title" class="sr-only">Mobile Navigation Menu</h2>
        <a href="/ralph-web/product" class="nav-link text-lg">Product</a>
        <a href="/ralph-web/pricing" class="nav-link text-lg">Pricing</a>
        <a href="/ralph-web/learn" class="nav-link text-lg">Learn</a>
        <div class="pt-6 border-t border-gray-700 flex flex-row gap-4">
          <Button variant="secondary" id="mobile-login-button" class="flex-1 text-center">
            Log In
          </Button>
          <Button variant="primary" size="lg" class="flex-1">
            Book a Demo
          </Button>
        </div>
      </nav>
    </div>
  </div>
</header>

<style>
  .mobile-menu-bg {
    background-color: rgb(40, 40, 40);
  }
</style>

