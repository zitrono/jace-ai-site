---
// Header component with navigation
---

<header class="sticky top-0 z-20 inset-x-0 transition-all">
  <nav class="mx-auto flex max-w-7xl items-center justify-between">
    <div class="flex items-center justify-between w-full px-6 py-3 lg:px-8 lg:py-4 transition-all header-transparent" style="background-color: rgba(40, 40, 40, 0.5); backdrop-filter: blur(12px);">
      <div class="flex lg:flex-1">
        <a href="/ralph-web/" class="-m-1.5 p-1.5">
          <span class="sr-only">Ralph</span>
          <span class="text-white font-bold text-2xl">ralph</span>
        </a>
      </div>
      
      <!-- Mobile CTA Button -->
      <div class="flex lg:hidden flex-1 justify-end mr-3">
        <button class="btn-primary btn-sm rounded-md mobile-cta-responsive">
          <span class="hidden min-[360px]:inline">Get Started for Free</span>
          <span class="inline min-[360px]:hidden">Get Started</span>
        </button>
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="flex lg:hidden">
        <button id="mobile-menu-button" type="button" class="inline-flex items-center justify-center rounded-md p-2 text-white" aria-label="Open main menu" aria-expanded="false">
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden lg:flex lg:gap-x-12">
        <a href="#features" class="nav-link">Features</a>
        <a href="/ralph-web/about" class="nav-link">Company</a>
        <a href="/ralph-web/blog" class="nav-link">Blog</a>
      </div>
      
      <!-- Desktop CTA Buttons -->
      <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-6">
        <a href="https://app.jace.ai/signin" class="btn-secondary" data-test="secondary-button">
          Log In
        </a>
        <button class="btn-primary btn-lg" data-test="cta-button">
          Get Started for Free
        </button>
      </div>
    </div>
  </nav>
  
  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="hidden fixed inset-0 z-50 lg:hidden">
    <div class="fixed right-0 top-0 bottom-0 w-full p-6" style="background-color: rgb(40, 40, 40);">
      <div class="flex items-center justify-between mb-8">
        <a href="/ralph-web/" class="-m-1.5 p-1.5">
          <span class="sr-only">Ralph</span>
          <span class="text-white font-bold text-2xl">ralph</span>
        </a>
        <button id="mobile-menu-close" type="button" class="rounded-md p-2.5 text-white" aria-label="Close menu">
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <nav class="flex flex-col space-y-4">
        <a href="#features" class="nav-link text-lg">Features</a>
        <a href="/ralph-web/about" class="nav-link text-lg">Company</a>
        <a href="/ralph-web/blog" class="nav-link text-lg">Blog</a>
        <div class="pt-6 border-t border-gray-700 flex flex-row gap-4">
          <a href="https://app.jace.ai/signin" class="btn-secondary flex-1 text-center">
            Log In
          </a>
          <button class="btn-primary btn-lg flex-1">
            Get Started for Free
          </button>
        </div>
      </nav>
    </div>
  </div>
</header>

