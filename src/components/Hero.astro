---
// Hero section component
---

<section class="relative isolate lg:mt-[-5.6em] max-md:pt-4 hero-spacing">
  <!-- Background pattern -->
  <svg aria-hidden="true" class="absolute inset-0 -z-10 size-full stroke-white/10">
    <defs>
      <pattern x="50%" y="-1" id="hero-pattern" width="200" height="200" patternUnits="userSpaceOnUse">
        <path d="M100 200V.5M.5 .5H200" fill="none"></path>
      </pattern>
    </defs>
    <rect fill="url(#hero-pattern)" width="100%" height="100%" stroke-width="0"></rect>
  </svg>
  
  <div class="mx-auto max-w-7xl px-6 md:pt-24 lg:flex lg:items-center lg:gap-x-20 lg:px-8 lg:pt-32">
    <div class="mx-auto max-w-2xl lg:mx-0 lg:flex-auto lg:w-5/12">
      <h1 class="lg:mt-10 pb-2 text-pretty text-5xl font-bold gradient-hero-title max-sm:text-center" style="letter-spacing: -1.5px; font-size: 48px;" data-test="hero-title">
        Gain 2 Hours Daily with Jace
      </h1>
      <p class="mt-4 max-md:mb-12 text-pretty text-lg font-medium sm:text-2xl/8 max-sm:text-center" style="color: rgba(255, 246, 238, 0.72);" data-test="hero-subtitle">
        Start your day with emails organized, drafts ready in your voice, and daily brief for maximum efficiency.
      </p>
      <div class="mt-10 flex items-center justify-center lg:justify-start flex-wrap gap-4">
        <button class="btn-primary btn-lg" data-test="cta-button">
          Get Started for Free
        </button>
      </div>
      
      <!-- Trust indicators -->
      <div class="mt-8 lg:mt-16 flex flex-col flex-wrap sm:flex-row gap-4 lg:gap-1 items-center justify-center lg:justify-start">
        <div class="items-center flex-wrap justify-center sm:justify-start flex gap-1">
          <div class="badge-certification uppercase h-10 inline-flex items-center gap-1 font-bold px-3" data-test="casa-badge">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd"></path>
            </svg>
            <div class="leading-none">
              <div>CASA Tier 3</div>
              <div>CERTIFIED</div>
            </div>
          </div>
        </div>
        
        <!-- User avatars -->
        <div class="flex -space-x-2">
          <div class="w-8 h-8 rounded-full bg-neutral-600 border-2 border-gray-800"></div>
          <div class="w-8 h-8 rounded-full bg-neutral-600 border-2 border-gray-800"></div>
          <div class="w-8 h-8 rounded-full bg-neutral-600 border-2 border-gray-800"></div>
          <div class="w-8 h-8 rounded-full bg-neutral-600 border-2 border-gray-800"></div>
        </div>
        <span class="text-text-muted text-sm" data-test="user-count">Join 1000+ enthusiasts</span>
      </div>
      
      <!-- Support features (hidden but available for testing) -->
      <div class="sr-only">
        <h3>24/7 support</h3>
        <h3>Money-back guarantee</h3>
        <h3>Privacy protection</h3>
        <h3>Secure checkout</h3>
      </div>
    </div>
    
    <!-- Demo video placeholder -->
    <div class="lg:w-7/12 mt-8 lg:mt-0">
      <div class="bg-gradient-video p-lg flex items-center justify-center rounded-lg aspect-video">
        <div class="text-center text-white">
          <h3 class="text-2xl font-bold mb-4">The Way Jace Works</h3>
          <div class="bg-neutral-800 bg-opacity-50 rounded-lg p-base w-64 h-32 flex items-center justify-center">
            <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Company logos -->
  <div class="mt-16 lg:mt-24">
    <p class="text-center text-text-muted mb-8">Built by engineers from</p>
    <div class="flex justify-center items-center flex-wrap gap-4 sm:gap-8 opacity-80 px-4">
      <div class="text-text-muted font-bold">Google</div>
      <div class="text-text-muted font-bold">Meta</div>
      <div class="text-text-muted font-bold">Tesla</div>
      <div class="text-text-muted font-bold">Amazon</div>
      <div class="text-text-muted font-bold">Oxford</div>
    </div>
  </div>
</section>