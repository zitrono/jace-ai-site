---
interface Props {
  class?: string;
  background?: 'primary' | 'secondary' | 'card' | 'gradient';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  id?: string;
}

const { 
  class: className = '',
  background = 'primary',
  padding = 'lg',
  id
} = Astro.props;

const backgroundClasses = {
  primary: 'bg-primary',
  secondary: 'bg-secondary',
  card: 'bg-card',
  gradient: 'bg-gradient-to-b from-gray-900 to-gray-800'
};

const paddingClasses = {
  sm: 'py-12',
  md: 'py-16',
  lg: 'py-20',
  xl: 'py-24'
};
---

<section 
  class={`${backgroundClasses[background]} ${paddingClasses[padding]} ${className}`}
  id={id}
>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <slot />
  </div>
</section>