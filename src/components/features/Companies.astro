---
// AI Adoption Paradox statistics section with design tokens

interface Statistic {
  value: string;
  description: string;
}

export interface Props {
  class?: string;
  title?: string;
  showStats?: boolean;
  customStats?: Statistic[];
  variant?: 'default' | 'compact';
}

const {
  class: className = '',
  title = 'The AI Adoption Paradox',
  showStats = true,
  customStats,
  variant: _variant = 'default',
} = Astro.props;

const defaultStats = [
  { value: '82%', description: 'of PE firms have adopted AI' },
  { value: 'Only 5%', description: 'have scaled successfully' },
  { value: '80%', description: 'of portfolio data remains untapped' },
  { value: 'Ralph', description: 'bridges this gap' },
];

const stats = customStats || defaultStats;
---

<section class={`py-16 bg-primary ${className}`}>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-12">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        {title}
      </h2>
    </div>

    {
      showStats && (
        <div class="mx-auto grid max-w-4xl grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-4xl font-bold text-accent mb-2">{stat.value}</div>
              <p class="text-base text-gray-300">{stat.description}</p>
            </div>
          ))}
        </div>
      )
    }

    <div class="mt-8 text-center">
      <p class="text-sm text-gray-400">
        Private beta launching Q1 2025 â€¢ Enterprise-ready infrastructure
      </p>
      <p class="text-xs text-gray-500 mt-2">Sources: Deloitte, BCG, Industry Reports</p>
    </div>
  </div>
</section>
