---
// Primitive Icon component for consistent SVG icons
// Provides a single source for all icon SVGs with consistent styling

import type { BaseComponentProps } from '@/types/components';

export interface Props extends BaseComponentProps {
  name:
    | 'check'
    | 'chevron-down'
    | 'bar-chart'
    | 'alert-triangle'
    | 'trending-up'
    | 'zap'
    | 'shield-check'
    | 'clock';
  class?: string;
  size?: 'sm' | 'base' | 'lg';
  'aria-hidden'?: boolean;
}

const {
  name,
  class: className = '',
  size = 'base',
  'aria-hidden': ariaHidden = true,
  ...rest
} = Astro.props;

const sizeClasses = {
  sm: 'h-4 w-4',
  base: 'h-5 w-5',
  lg: 'h-10 w-10',
};

const iconPaths = {
  check: 'M5 13l4 4L19 7',
  'chevron-down': 'M19 9l-7 7-7-7',
  'bar-chart':
    'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  'alert-triangle':
    'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  'trending-up': 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
  zap: 'M13 10V3L4 14h7v7l9-11h-7z',
  'shield-check':
    'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
};
---

<svg
  class={`${sizeClasses[size]} ${className}`}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
  aria-hidden={ariaHidden}
  {...rest}
>
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[name]}></path>
</svg>
