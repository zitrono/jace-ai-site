---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Section from '../components/layout/Section.astro';
---

<style>
  /* Responsive calendar container */
  .calendar-container {
    position: relative;
    width: 100%;
    overflow: hidden;
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  /* Desktop aspect ratio */
  .calendar-desktop {
    padding-bottom: 75%;
  }

  /* Tablet aspect ratio */
  @media (max-width: 1024px) {
    .calendar-desktop {
      padding-bottom: 100%;
    }
  }

  /* Mobile aspect ratio - increased to prevent internal scroll */
  .calendar-mobile {
    padding-bottom: 200%;
  }

  /* Very small mobile screens */
  @media (max-width: 360px) {
    .calendar-mobile {
      padding-bottom: 250%;
    }
  }

  /* iframe styles */
  .calendar-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  /* Landscape mode optimization */
  @media (max-width: 768px) and (orientation: landscape) {
    .calendar-mobile {
      padding-bottom: 120%;
    }
  }

  /* Small landscape phones need more space */
  @media (max-width: 667px) and (orientation: landscape) {
    .calendar-mobile {
      padding-bottom: 150%;
    }
  }
</style>

<Layout title="Book a Demo | Ralph - AI-Native Private Equity Platform">
  <div class="min-h-screen">
    <Header />
    <main>
      <Section spacing="md" background="primary" maxWidth="4xl">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-white mb-4">Schedule Your Ralph Demo</h1>
          <p class="text-lg text-gray-300 max-w-2xl mx-auto">
            See how Ralph transforms your portfolio intelligence in a personalized 30-minute
            session.
          </p>
        </div>

        <!-- Responsive iframe container -->
        <div class="calendar-container hidden md:block calendar-desktop">
          <iframe
            src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ06HT0qrMIwj3pjMxbe1pOfWf5Vd-L0vnogrpNejuh35QzvZP1Ndas6oENqjlbfQIL822endVG7?gv=true"
            class="calendar-iframe"
            frameborder="0"
            title="Schedule Ralph Demo"
            loading="lazy"
            allowfullscreen
            aria-label="Google Calendar appointment scheduling"></iframe>
        </div>

        <!-- Mobile view -->
        <div class="calendar-container md:hidden calendar-mobile">
          <iframe
            src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ06HT0qrMIwj3pjMxbe1pOfWf5Vd-L0vnogrpNejuh35QzvZP1Ndas6oENqjlbfQIL822endVG7?gv=true"
            class="calendar-iframe"
            frameborder="0"
            title="Schedule Ralph Demo"
            loading="lazy"
            allowfullscreen
            aria-label="Google Calendar appointment scheduling"></iframe>
        </div>

        <div class="text-center mt-8">
          <p class="text-sm text-gray-400">
            Can't find a suitable time? <a
              href="mailto:Konstantin@beneficious.com"
              class="text-yellow-400 hover:text-yellow-300">Contact us directly</a
            >
          </p>
        </div>

        <!-- Mobile tip -->
        <div class="md:hidden text-center mt-4">
          <p class="text-xs text-gray-500">
            Tip: Rotate your device to landscape for better viewing
          </p>
        </div>
      </Section>
    </main>
    <Footer />
  </div>
</Layout>
