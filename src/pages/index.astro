---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Hero from '../components/features/Hero.astro';
import Companies from '../components/features/Companies.astro';
import Features from '../components/features/Features.astro';
import Pricing from '../components/features/Pricing.astro';
import Testimonials from '../components/features/TestimonialsNew.astro';
import CTA from '../components/features/CTA.astro';
import FAQ from '../components/features/FAQ.astro';
import Footer from '../components/layout/Footer.astro';
import CookieConsent from '../components/utils/CookieConsent.astro';
import LoginModal from '../components/utils/LoginModal.astro';
---

<Layout title="Ralph | AI-Native Private Equity Platform">
  <div class="min-h-screen">
    <Header />
    <main id="main" role="main" tabindex="-1">
      <!-- Hero Section -->
      <section aria-labelledby="hero-title">
        <Hero 
          title="See Tomorrow's Opportunities Today"
          subtitle="AI agents transform your unstructured portfolio data into predictive intelligence, revealing opportunities weeks ahead."
          ctaText="Book a Demo"
          ctaHref="/ralph-web/#"
        />
      </section>
      
      <!-- Social Proof Section - The AI Adoption Paradox -->
      <section aria-labelledby="social-proof-title" class="py-16 bg-secondary">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 id="social-proof-title" class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-6">
              The AI Adoption Paradox
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-4xl mx-auto">
              <div class="text-center">
                <div class="text-4xl font-bold text-yellow-400 mb-2">82%</div>
                <div class="text-gray-300">of PE firms have adopted AI</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-yellow-400 mb-2">5%</div>
                <div class="text-gray-300">have scaled successfully</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-yellow-400 mb-2">80%</div>
                <div class="text-gray-300">of portfolio data remains untapped</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-white mb-2">Ralph</div>
                <div class="text-gray-300">bridges this gap</div>
              </div>
            </div>
            <p class="mt-8 text-lg text-gray-400">
              Private beta launching Q1 2025 • Enterprise-ready infrastructure
            </p>
            <p class="mt-2 text-sm text-gray-500">
              Sources: Deloitte, BCG, Industry Reports
            </p>
          </div>
        </div>
      </section>

      <!-- Why Ralph Section - Competitive Differentiation -->
      <section aria-labelledby="why-ralph-title" class="py-20 bg-primary">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 id="why-ralph-title" class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-6">
              Why Ralph Works Where Others Fail
            </h2>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto">
              While competitors force AI to guess at messy data, Ralph first makes every data source intelligent and agent-compatible.
            </p>
          </div>
          
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Others side -->
            <div class="bg-card rounded-lg p-8">
              <h3 class="text-xl font-bold text-white mb-4">Traditional AI Solutions</h3>
              <ul class="space-y-3 text-gray-300">
                <li class="flex items-start">
                  <span class="text-red-400 mr-3">✗</span>
                  Work only with structured data
                </li>
                <li class="flex items-start">
                  <span class="text-red-400 mr-3">✗</span>
                  Miss 80% of portfolio insights
                </li>
                <li class="flex items-start">
                  <span class="text-red-400 mr-3">✗</span>
                  Guess at unstructured information
                </li>
                <li class="flex items-start">
                  <span class="text-red-400 mr-3">✗</span>
                  Limited to spreadsheet analysis
                </li>
              </ul>
            </div>
            
            <!-- Ralph side -->
            <div class="bg-gradient-to-br from-yellow-400/10 to-yellow-600/10 border border-yellow-400/20 rounded-lg p-8">
              <h3 class="text-xl font-bold text-white mb-4">Ralph's Intelligent Infrastructure</h3>
              <ul class="space-y-3 text-gray-300">
                <li class="flex items-start">
                  <span class="text-yellow-400 mr-3">✓</span>
                  Transforms data sources into AI-ready feeds
                </li>
                <li class="flex items-start">
                  <span class="text-yellow-400 mr-3">✓</span>
                  Processes 100% of portfolio data
                </li>
                <li class="flex items-start">
                  <span class="text-yellow-400 mr-3">✓</span>
                  Understands unstructured information
                </li>
                <li class="flex items-start">
                  <span class="text-yellow-400 mr-3">✓</span>
                  Analyzes emails, documents, conversations
                </li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Features/Product Section -->  
      <section id="product" aria-labelledby="features-title">
        <Features />
      </section>

      <!-- Pricing Section -->
      <section id="pricing" aria-labelledby="pricing-title">
        <Pricing />
      </section>

      <!-- Testimonials Section -->
      <section aria-labelledby="testimonials-title">
        <Testimonials />
      </section>

      <!-- Call to Action Section -->
      <section aria-labelledby="cta-title">
        <CTA />
      </section>

      <!-- FAQ Section -->
      <section aria-labelledby="faq-title">
        <FAQ />
      </section>
    </main>
    <Footer />
    <CookieConsent />
    <LoginModal />
  </div>
</Layout>
