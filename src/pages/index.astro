---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Hero from '../components/features/Hero.astro';
import Features from '../components/features/Features.astro';
import Pricing from '../components/features/Pricing.astro';
import TestimonialsNew from '../components/features/TestimonialsNew.astro';
import FAQ from '../components/features/FAQ.astro';
import Section from '../components/layout/Section.astro';
import Footer from '../components/layout/Footer.astro';
import CookieConsent from '../components/utils/CookieConsent.astro';
import LoginModal from '../components/utils/LoginModal.astro';
import { siteConfig } from '@/config/site-config';
---

<Layout title="Ralph | AI-Native Private Equity Platform">
  <div class="min-h-screen">
    <Header />
    <main id="main" role="main" tabindex="-1">
      <!-- Hero Section - Self-managed section -->
      <Hero
        title="See Tomorrow's Opportunities Today"
        subtitle="AI agents transform your unstructured portfolio data into predictive intelligence, revealing opportunities weeks ahead."
        ctaText="Book a Demo"
        ctaHref={siteConfig.demo.url}
      />

      <!-- Social Proof Section - The AI Adoption Paradox -->
      <Section 
        aria-labelledby="social-proof-title" 
        spacing="md" 
        background="primary" 
        as="section"
      >
          <div class="text-center mb-12">
            <h2
              id="social-proof-title"
              class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-6"
            >
              The AI Adoption Paradox
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-4xl mx-auto">
              <div class="text-center">
                <div class="text-4xl font-bold text-yellow-400 mb-2">€8.2T</div>
                <div class="text-gray-300">global PE market</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-yellow-400 mb-2">20-30%</div>
                <div class="text-gray-300">of deal flow analyzed today</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-yellow-400 mb-2">30-45</div>
                <div class="text-gray-300">days faster with AI</div>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-white mb-2">Ralph</div>
                <div class="text-gray-300">bridges this gap</div>
              </div>
            </div>
            <p class="mt-8 text-sm text-gray-500">
              Sources: McKinsey Global Private Markets Review 2024, Deloitte PE AI Adoption Study
            </p>
            <p class="mt-2 text-lg text-gray-400">Private beta launching Q3 2025 • Enterprise-ready infrastructure</p>
          </div>
      </Section>

      <!-- Why Ralph Section - Competitive Differentiation -->
      <Section 
        aria-labelledby="why-ralph-title" 
        spacing="lg" 
        background="primary" 
        as="section"
      >
          <div class="text-center mb-16">
            <h2
              id="why-ralph-title"
              class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-6"
            >
              Why Ralph Works Where Others Fail
            </h2>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto">
              While competitors force AI to guess at messy data, Ralph first makes every data source
              intelligent and agent-compatible.
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Others side -->
            <div class="bg-card border border-red-400/20 rounded-lg p-8 relative">
              <div class="absolute top-3 right-3">
                <div class="w-3 h-3 bg-red-400 rounded-full"></div>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">Traditional AI Solutions</h3>
              <p class="text-sm text-red-400 mb-6 font-medium">Limited to 20% of your data</p>
              <ul class="space-y-3 text-gray-300">
                <li class="flex items-center">
                  <span class="text-red-400 mr-3 text-lg leading-none flex-shrink-0">✗</span>
                  <span class="leading-relaxed">Work only with structured data</span>
                </li>
                <li class="flex items-center">
                  <span class="text-red-400 mr-3 text-lg leading-none flex-shrink-0">✗</span>
                  <span class="leading-relaxed">Miss 80% of portfolio insights</span>
                </li>
                <li class="flex items-center">
                  <span class="text-red-400 mr-3 text-lg leading-none flex-shrink-0">✗</span>
                  <span class="leading-relaxed">Guess at unstructured information</span>
                </li>
                <li class="flex items-center">
                  <span class="text-red-400 mr-3 text-lg leading-none flex-shrink-0">✗</span>
                  <span class="leading-relaxed">Limited to spreadsheet analysis</span>
                </li>
              </ul>
              <div class="mt-6 pt-4 border-t border-red-400/20 text-center">
                <p class="text-xs text-red-400/80">
                  Result: Blind spots and missed opportunities
                </p>
              </div>
            </div>

            <!-- Ralph side -->
            <div
              class="bg-card border-2 border-accent rounded-lg p-8"
            >
              <h3 class="text-xl font-bold text-primary mb-4">Ralph's Intelligent Infrastructure</h3>
              <ul class="space-y-3 text-secondary">
                <li class="flex items-center">
                  <span class="text-green-500 mr-3 text-lg leading-none flex-shrink-0">✓</span>
                  <span class="leading-relaxed">Transforms data sources into AI-ready feeds</span>
                </li>
                <li class="flex items-center">
                  <span class="text-green-500 mr-3 text-lg leading-none flex-shrink-0">✓</span>
                  <span class="leading-relaxed">Processes 100% of portfolio data</span>
                </li>
                <li class="flex items-center">
                  <span class="text-green-500 mr-3 text-lg leading-none flex-shrink-0">✓</span>
                  <span class="leading-relaxed">Understands unstructured information</span>
                </li>
                <li class="flex items-center">
                  <span class="text-green-500 mr-3 text-lg leading-none flex-shrink-0">✓</span>
                  <span class="leading-relaxed">Analyzes emails, documents, conversations</span>
                </li>
              </ul>
              <!-- Data Coverage Indicator -->
              <div class="mt-6 pt-4 border-t border-neutral-600 text-center">
                <p class="text-sm text-muted">
                  Complete PE data intelligence: <span class="text-accent font-semibold">4 deal stages</span> × <span class="text-accent font-semibold">5 security levels</span> = <span class="text-accent font-semibold">100% coverage</span>
                </p>
                <a 
                  href="/ralph-web/learn/pe-data-landscape" 
                  class="inline-flex items-center mt-2 text-xs text-accent hover:text-accent/80 transition-colors group"
                >
                  <span>See the complete data landscape</span>
                  <svg class="w-3 h-3 ml-1 transform group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
      </Section>

      <!-- Features/Product Section -->
      <section id="product" aria-labelledby="features-title">
        <Features />
      </section>

      <!-- Pricing Section -->
      <section id="pricing" aria-labelledby="pricing-title">
        <Pricing />
      </section>

      <!-- CEO Testimonials Section -->
      <TestimonialsNew 
        title="Leading PE Firms Are Embracing AI Transformation"
        subtitle="Industry Leaders on AI Adoption"
        columns={3}
      />

      <!-- FAQ Section -->
      <section aria-labelledby="faq-title">
        <FAQ />
      </section>
    </main>
    <Footer />
    <CookieConsent />
    <LoginModal />
  </div>
</Layout>
