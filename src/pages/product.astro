---
// Redirect to homepage #product section
import Layout from '../layouts/Layout.astro';
---

<Layout title="Product | Ralph - AI-Native Private Equity Platform">
  <div class="min-h-screen bg-primary flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-2xl font-bold text-white mb-4">Redirecting...</h1>
      <p class="text-gray-300 mb-4">You are being redirected to our product section.</p>
      <a href="/ralph-web/#product" class="text-yellow-400 hover:text-yellow-300 underline">
