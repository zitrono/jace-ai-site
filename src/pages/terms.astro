---
import Layout from '@/layouts/Layout.astro';
import Section from '@/components/layout/Section.astro';
---

<Layout title="Terms & Conditions | Ralph by Beneficious">
  <main>
    <Section background="primary" spacing="xl">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl md:text-4xl font-semibold text-primary mb-2">Terms & Conditions</h1>
        <p class="text-sm text-muted mb-8">Last updated: June 26, 2025</p>

        <div class="space-y-12">
          <section>
            <h2 class="text-xl font-semibold text-primary mb-3 pb-2 border-b border-neutral-700">1. Agreement to Terms</h2>
            <p class="text-secondary leading-relaxed mb-4">
